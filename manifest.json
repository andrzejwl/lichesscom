{
    "name": "LiChess.com",
    "description": "Import your chess.com game into the lichess.org analysis tool.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "tabs"],
    "content_scripts": [
        {
            "matches": ["*://*.chess.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}
